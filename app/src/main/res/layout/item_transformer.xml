<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="transformer"
                type="com.vincentcho.transformer.vo.Transformer"/>

    </data>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true">

        <androidx.cardview.widget.CardView
                android:id="@+id/cvTransformer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/ivPic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="8dp"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="8dp"
                        android:text="@{transformer.name}"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="16sp"
                        tools:text="text"
                    />
                    <TextView
                        android:id="@+id/tvstrength"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:paddingRight="4dp"
                        android:text="@{`Strength: `+Integer.toString(transformer.strength)}"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        tools:text="text2"
                    />
                    <TextView
                            android:id="@+id/tvintelligence"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Intelligence: `+Integer.toString(transformer.intelligence)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                    <TextView
                            android:id="@+id/tvspeed"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Speed: `+Integer.toString(transformer.speed)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                    <TextView
                            android:id="@+id/tvrank"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Rank: `+Integer.toString(transformer.rank)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tvblank"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:paddingRight="8dp"
                            android:text=""
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="16sp"
                            tools:text="text"
                    />
                    <TextView
                            android:id="@+id/tvendurance"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`endurance: `+ Integer.toString(transformer.endurance)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text"
                    />
                    <TextView
                            android:id="@+id/tvcourage"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Courage: `+Integer.toString(transformer.courage)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                    <TextView
                            android:id="@+id/tvfirepower"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Firepower: `+Integer.toString(transformer.firepower)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                    <TextView
                            android:id="@+id/tvskill"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingRight="4dp"
                            android:text="@{`Skill: `+Integer.toString(transformer.skill)}"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="12sp"
                            tools:text="text2"
                    />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>